<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cs175homeworks.memorygame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".RulesActivity"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.RULES"/>
                <category android:name="android.intent.category.RULES"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".GameActivity"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.GAME"/>
                <category android:name="android.intent.category.GAME"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".VictoryActivity"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.VICTORY"/>
                <category android:name="android.intent.category.VICTORY"/>
            </intent-filter>
        </activity>
    </application>
</manifest>